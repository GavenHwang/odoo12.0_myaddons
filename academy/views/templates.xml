<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--老师列表-->
        <template id="template_01">
            <title>Academy</title>
            <t t-foreach="teachers" t-as="teacher">
                <p>
                    <t t-esc="teacher.id"/>
                    <t t-esc="teacher.name"/>
                </p>
            </t>
        </template>

        <!--老师列表（带链接）-->
        <template id="template_02">
            <t t-call="website.layout">
                <t t-set="title">Academy</t>
                <div class="oe_structure">
                    <div class="container">
                        <t t-foreach="teachers" t-as="teacher">
                            <!--例3：嵌套website-->
                            <!--<p><t t-esc="teacher.id"/> <t t-esc="teacher.name"/></p>-->
                            <p>
                                <a t-attf-href="/academy/{{ slug(teacher) }}">
                                    <t t-esc="teacher.name"/>
                                </a>
                            </p>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <!--个人简介-->
        <template id="biography">
            <t t-call="website.layout">
                <t t-set="title">Academy</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container">
                        <h3><t t-esc="person.name"/></h3>
                        <p>Last modified: <i t-field="person.write_date" t-options='{"widget": "relative"}'/></p>
                        <div><t t-esc="person.biography"/></div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <template id="product_item_hide_no_price" inherit_id="website_sale.products_item">
            <xpath expr="//div[hasclass('product_price')]/b" position="attributes">
                <attribute name="t-if">product.price &gt; 0</attribute>
            </xpath>
        </template>

        <!-- 商品列表左侧，侧边栏默认展开 -->
        <record id="website_sale.products_categories" model="ir.ui.view">
            <field name="active" eval="True"/>
        </record>
